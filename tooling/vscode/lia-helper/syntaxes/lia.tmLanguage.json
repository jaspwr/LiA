{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LiA",
	"patterns": [
		{
			"include": "#equations"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#mdsyms"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#texcommands"
		},
		{
			"include": "#backslash"
		},
		{
			"include": "#escapedsym"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.lia",
				"match": "\\b(env\\b|use\\b|eq(\\*|\\b))"
			}]
		},
		"texcommands": {
			"patterns": [{
				"name": "support.type.property-name",
				"match": "\\\\[a-zA-Z0-9]+"
			}]
		},
		"escapedsym": {
			"patterns": [{
				"name": "constant.character.escape",
				"match": "\\\\."
			}]
		},
		"backslash": {
			"patterns": [{
				"name": "keyword.control.lia",
				"match": "\\\\\\\\"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "keyword.control.lia",
				"match": "@[a-zA-Z0-9]+"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric",
				"match": "(\\b([0-9]+)(\\.[0-9]+)?)"
			}]
		},
		"mdsyms": {
			"patterns": [{
				"name": "keyword.control.lia",
				"match": "(^(\\s+?)?(((###|##|#)(\\*?))|([0-9]+\\.(?![a-zA-Z0-9]))(?![0-9])|(\\*)))|(\\*\\*+)"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.lia",
				"match": "(%(.+?)(\n|$))|(%)"
			}]
		},
		"equations": {
			"name": "source.lia",
			"begin": "eq((\\*?)\\s+?)?{",
			"end": "}",
			"patterns": [{
				"name": "keyword.control.lia",
				"match": "(<->|<=>|<=|>=|\\+-|-\\+|=>|!=|->|<-|\\^\\^|~==|~=|~~|inf|arcsin|arccos|arctan|sinh|cosh|tanh|coth|sin|cos|tan|cot|sec|csc|log|ln)"
			},
			{
				"include": "#mdsyms"
			},
			{
				"include": "#numbers"
			},
			{
				"include": "#texcommands"
			},
			{
				"include": "#escapedsym"
			}]
		}
	},
	"scopeName": "source.lia"
}